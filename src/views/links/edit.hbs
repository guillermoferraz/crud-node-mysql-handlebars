<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class='card-body'>
          <form class="form-group" action="/links/edit/{{link.id}}" method="post">
              <div class="form-group mt-1">
                <input type='text' value='{{link.title}}' class="form-control" name="title" placeholder="Title">
              </div>
              <div class='form-group mt-1'>
                <input type="url" name="url" value='{{link.url}}' class="form-control" placeholder="URL">
              </div>
              <div class="form-group mt-1">
                <textarea class="form-control" name="description" placeholder="Description" rows="2">{{link.description}}</textarea>
              </div>
              <div class="form-group mt-1">
                <button class="btn btn-success btn-block">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
  </div>

</div>
